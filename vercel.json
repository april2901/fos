{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "rewrites": [
    {
      "source": "/api/speech-comparison",
      "destination": "/api/speech-comparison.ts"
    },
    {
      "source": "/api/llm-regenerate",
      "destination": "/api/llm-regenerate.ts"
    },
    {
      "source": "/api/llm-test",
      "destination": "/api/llm-test.ts"
    }
  ],
  "devCommand": "cd frontend && npm run dev -- --port $PORT"
}